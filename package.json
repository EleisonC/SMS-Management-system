{
  "name": "sms-management-system",
  "version": "1.0.0",
  "description": "A system to manage messages",
  "main": "src/app.js",
  "scripts": {
    "start": "node  -r dotenv/config ./src/app.js ",
    "test:seed": "NODE_ENV=test npx sequelize db:seed:all",
    "test:migrate": "NODE_ENV=test npx sequelize db:migrate",
    "test:migrate:undo": "NODE_ENV=test npx sequelize db:migrate:undo:all",
    "test:seed:undo": "NODE_ENV=test npx sequelize db:seed:undo:all",
    "test:coverage": "NODE_ENV=test npx jest --coverage  --forceExit"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
