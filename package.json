    "yarn": "^1.16.0"
  },
  "devDependencies": {
    "child-process-promise": "^2.2.1",
    "jest": "^24.1.0",
    "moxios": "^0.4.0",
    "node-mocks-http": "^1.7.3",
    "sinon": "^7.2.4",
    "supertest": "^3.4.2"
  },
